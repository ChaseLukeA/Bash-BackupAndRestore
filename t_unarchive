#!/bin/bash

wd=`pwd`
archive="${wd##*/}.zip"
filelist=".files"

cd $wd

clear
echo
echo ────────────────────────────────────────────────────────────────────────────────────────
echo "Unarchiving files in [$archive]..."
echo ────────────────────────────────────────────────────────────────────────────────────────
echo

if [ ! -f "$archive" ]; then
  echo "Archive [$archive] doesn't exist!"
  echo
  exit
fi

echo ────────────────────────────────────────────────────────────────────────────────────────
unzip $archive
echo ────────────────────────────────────────────────────────────────────────────────────────

echo
